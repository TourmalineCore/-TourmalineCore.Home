{
  "eslint.alwaysShowStatus": true,
  "eslint.options": {
    "extensions": [ ".js", ".jsx" ]
  },
  "eslint.validate": [
    "javascript"
  ],
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  }
}
